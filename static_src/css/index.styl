body
	margin 0
	box-sizing border-box

form
	margin-top 30px
	border 1px solid #ccc

.form-block
	width 300px

	input,
	label
		display block
		width 100%
		box-sizing border-box

	a.submit
		display inline-block
		padding 5px 10px
		text-decoration none
		background #ccc
		
	.error
		color red
		
	.success
		color green
		
	.col-50
		display inline-block
		width 50%

		input
			display inline-block
			width auto
			vertical-align top

	.check
		position relative
		padding-left 25px

		input
			position absolute
			top 0
			left 0
			display inline-block
			width auto
			vertical-align top